<Page x:Class="Chasser.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chasser"
      mc:Ignorable="d"
      
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <Page.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#f8f1df" />
        <SolidColorBrush x:Key="LightBrown" Color="#D2B48C" />
        <SolidColorBrush x:Key="DarkBrown" Color="#8B4513" />
        <SolidColorBrush x:Key="HighlightColor" Color="#7DFF7D" Opacity="0.5"/>
    </Page.Resources>

    <Grid Background="{StaticResource SoftBeige}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Panel izquierdo con botones -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0">
            <Image Source="/Imgs/logo.jpg" Width="100" Height="100" Margin="5,5"/>

            <Button Content="Reiniciar" Click="OnRestartClicked" Margin="5" Padding="10,5"
        Background="#8B4513" Foreground="Beige"
        FontWeight="Bold" FontFamily="Georgia"
        Width="120" BorderBrush="#5C3317" BorderThickness="2">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.3" BlurRadius="5"/>
                </Button.Effect>
            </Button>

            <Button Content="Salir" Click="OnExitClicked" Margin="5" Padding="10,5"
        Background="#8B4513" Foreground="Beige"
        FontWeight="Bold" FontFamily="Georgia"
        Width="120" BorderBrush="#5C3317" BorderThickness="2">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.3" BlurRadius="5"/>
                </Button.Effect>
            </Button>

            <Button Content="Ver Reglas" Margin="5" Padding="10,5" Click="Rules_Click"
        Background="#5C3317" Foreground="Beige"
        FontWeight="Bold" FontFamily="Georgia" FontSize="16"
        Width="140" BorderBrush="#3A1F0E" BorderThickness="3">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="7"/>
                </Button.Effect>
            </Button>
        </StackPanel>


        <Grid Grid.Column="1" Name="boardGrid" Width="500" Height="500" MouseDown="boardGrid_MouseDown">
            <Grid.Background>
                <ImageBrush ImageSource="/Imgs/realBoard.png"></ImageBrush>
            </Grid.Background>

            <UniformGrid x:Name="highlightGrid" Rows="7" Columns="7">
            </UniformGrid>

            <UniformGrid x:Name="pieceGrid" Rows="7" Columns="7"
                         RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>
        </Grid>

        <Border Grid.Row="0" Grid.Column="2"
        Margin="20,30,0,10"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        CornerRadius="8"
        Background="#2D2D30"
        BorderBrush="#FF5722"
        BorderThickness="2">
            <StackPanel Orientation="Horizontal">
                <!-- Indicador visual del turno -->
                <Ellipse Width="16" Height="16" 
                 Margin="10,0,5,0"
                 VerticalAlignment="Center"
                 Fill="White" 
                 Stroke="#FF5722"
                 StrokeThickness="1"/>

                <!-- Texto del turno -->
                <TextBlock x:Name="turnBlock"
                   Text="TURNO: BLANCAS" 
                   FontSize="16"
                   FontFamily="Segoe UI Semibold"
                   Foreground="White"
                   Padding="5,8"
                   VerticalAlignment="Center"
                   />
            </StackPanel>
        </Border>

        <!-- Panel derecho con información -->
        <StackPanel x:Name="infoUser"
            Grid.Column="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="20,0,0,0"
            Background="#FFFF88"
            MinWidth="220"
            MaxWidth="350"
            Effect="{DynamicResource DropShadow}"
            RenderTransformOrigin="0.5,0.5">

            <StackPanel.RenderTransform>
                <RotateTransform Angle="-1.5"/>
            </StackPanel.RenderTransform>

            <StackPanel.Resources>
                <DropShadowEffect x:Key="DropShadow"
                          Color="Black"
                          Direction="315"
                          ShadowDepth="5"
                          Opacity="0.3"
                          BlurRadius="10"/>
            </StackPanel.Resources>

            <TextBlock Text="Datos del jugador" FontSize="17" FontWeight="Bold"/>
            <TextBlock x:Name="nameBlock" Text="Manuel Montero Calero" FontSize="17"/>
            <TextBlock x:Name="gamesBlock" Text="Partidas ganadas: 3" FontSize="17"/>
            <TextBlock x:Name="streakBlock" Text="Partidas ganadas: 3" FontSize="17"/>
            <TextBlock x:Name="gameCodeBlock" 
               Text="Código de partida: ABC123" 
               FontSize="17" 
               Margin="0,10,0,0"
               FontWeight="Bold"
               Foreground="{StaticResource DarkBrown}"/>
        </StackPanel>
        <Grid x:Name="GameOverPanel"
      Background="#AA000000"
      Visibility="Collapsed"
      Panel.ZIndex="99">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" >
                <TextBlock x:Name="GameOverMessage"
                   FontSize="24"
                   FontWeight="Bold"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>
                <Button Content="Volver al menú" Click="OnReturnToMenuClicked" Margin="0,0,0,10"/>
                <Button Content="Jugar otra vez" Click="OnRematchClicked"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>