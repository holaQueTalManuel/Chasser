<Window x:Class="Chasser.View.PopUpInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Información"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E" />
        <SolidColorBrush x:Key="AccentColor" Color="#FFD700" />
        <!-- Dorado como color acento -->
    </Window.Resources>

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Border Background="{StaticResource DarkBackground}" 
                CornerRadius="20"
                Padding="30"
                Width="400"
                BorderBrush="#3E3E3E"
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black"
                                  BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.8"/>
            </Border.Effect>

            <StackPanel>
                <Image x:Name="IconImage"
           Width="48"
           Height="48"
           Margin="0,0,0,15"
           HorizontalAlignment="Center"/>
                <!-- Logo -->
                <TextBlock Text="CHASSER" 
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="{StaticResource AccentColor}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Mensaje de error -->
                <TextBlock x:Name="MessageText"
                           Text="Inicio de sesión fallido. Motivo: Usuario o contraseña incorrectos"
                           TextWrapping="Wrap"
                           FontSize="16"
                           Foreground="#E0E0E0"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Botón -->
                <Button Content="ACEPTAR"
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Center"
                        Background="{StaticResource AccentColor}"
                        Foreground="#1E1E1E"
                        BorderBrush="Transparent"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="AcceptButton_Click"/>

                
            </StackPanel>
        </Border>
    </Grid>
</Window>