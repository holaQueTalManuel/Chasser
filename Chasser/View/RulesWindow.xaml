<Window x:Class="Chasser.View.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reglas del juego" Height="400" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Icon="/Imgs/logo.jpg"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#FFFDF6E3" />
        <DropShadowEffect x:Key="DropShadow" BlurRadius="10" ShadowDepth="0" Color="#C0A87A" Opacity="0.3"/>
        <SolidColorBrush x:Key="AccentColor" Color="#C0A87A"/>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Aqua"/>
                    <!-- color al pasar el mouse -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="Transparent">
        <Border Background="BurlyWood"
                CornerRadius="40"
                Padding="20"
                Margin="20"
                Effect="{StaticResource DropShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Text="Reglas del juego"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Contenido -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel Margin="0,10,0,10">
                        <TextBlock TextWrapping="Wrap"
                   FontSize="16"
                   Foreground="#333"
                   Margin="0,10,0,0">
            <Run FontWeight="Bold">• Objetivo:</Run> Capturar todas las piezas del oponente o entrar en la casilla verde del centro (meta).
            <LineBreak/><LineBreak/>

            <Run FontWeight="Bold">• Movimientos:</Run>
            <LineBreak/>  - <Run FontWeight="Bold">Sanguijuelas:</Run> se mueven 1 casilla en dirección vertical u horizontal.
            <LineBreak/>  - <Run FontWeight="Bold">Obliteradores:</Run> se mueven en diagonal 1 o 2 casillas.
            <LineBreak/>  - <Run FontWeight="Bold">Toneles:</Run> se mueven en vertical u horizontal 1 o 2 casillas.
            <LineBreak/><LineBreak/>

            <Run FontWeight="Bold">• Turnos:</Run> El turno cambia automáticamente tras mover una pieza.
            <LineBreak/><LineBreak/>

            <Run FontWeight="Bold">• Capturas:</Run>
            <LineBreak/>  - <Run FontWeight="Bold">Obliteradores</Run> pueden capturar a <Run FontWeight="Bold">Sanguijuelas</Run> y <Run FontWeight="Bold">Toneles</Run>.
            <LineBreak/>  - <Run FontWeight="Bold">Sanguijuelas</Run> pueden capturar a <Run FontWeight="Bold">Toneles</Run> y <Run FontWeight="Bold">Obliteradores</Run>.
            <LineBreak/>  - <Run FontWeight="Bold">Toneles</Run> no pueden capturar.
            <LineBreak/><LineBreak/>

            <Italic>En el futuro serán añadidas más reglas que te dejarán boquiabierto/a.</Italic>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>


                <!-- Botón cerrar -->
                <Button Grid.Row="2"
                        Content="Cerrar"
                        Style="{StaticResource RoundedButton}"
                        Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
