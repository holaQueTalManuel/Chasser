<Page x:Class="Chasser.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chasser"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Registro">

    <Page.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#f8f1df" />

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SoftBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image Source="/Imgs/logo.jpg"
               Width="80" Height="80"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"/>

        <!-- Formulario -->
        <Border Grid.Row="1"
                CornerRadius="16"
                Padding="30,20"
                Background="White"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Registro en CHASSER"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#333"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Correo -->
                <Grid>
                    <TextBox x:Name="EmailBox"
                             Style="{StaticResource TextBoxStyle}"
                             TextChanged="EmailBox_TextChanged"
                             GotFocus="EmailBox_GotFocus"
                             LostFocus="EmailBox_LostFocus"/>
                    <TextBlock x:Name="EmailPlaceholder"
                               Text="Correo electrónico"
                               Foreground="Gray"
                               Margin="14,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>

                <!-- Usuario -->
                <Grid>
                    <TextBox x:Name="UsernameBox"
                             Style="{StaticResource TextBoxStyle}"
                             TextChanged="UsernameBox_TextChanged"
                             GotFocus="UsernameBox_GotFocus"
                             LostFocus="UsernameBox_LostFocus"/>
                    <TextBlock x:Name="UsernamePlaceholder"
                               Text="Nombre de usuario"
                               Foreground="Gray"
                               Margin="14,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>

                <!-- Contraseña -->
                <Grid>
                    <PasswordBox x:Name="PasswordBox"
                                 Style="{StaticResource PasswordBoxStyle}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Visibility="Visible"/>
                    <TextBox x:Name="PasswordTextBox"
                             Style="{StaticResource TextBoxStyle}"
                             Visibility="Collapsed"
                             TextChanged="PasswordTextBox_TextChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder"
                               Text="Contraseña"
                               Foreground="Gray"
                               Margin="14,0,0,0"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                    <Button x:Name="TogglePasswordButton"
                            Content="👁️"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Width="30" Height="30"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="0,0,10,0"
                            FontSize="20"
                            Tag="Password"
                            Cursor="Hand"
                            Click="TogglePasswordVisibility"/>
                </Grid>

                <!-- Confirmar Contraseña -->
                <Grid>
                    <PasswordBox x:Name="ConfirmPasswordBox"
                 Style="{StaticResource PasswordBoxStyle}"
                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                 Visibility="Visible"/>

                    <TextBox x:Name="ConfirmPasswordTextBox"
             Style="{StaticResource TextBoxStyle}"
             Visibility="Collapsed"
             TextChanged="ConfirmPasswordTextBox_TextChanged"/>

                    <TextBlock x:Name="ConfirmPasswordPlaceholder"
               Text="Confirmar contraseña"
               Foreground="Gray"
               Margin="14,0,0,0"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>

                    <Button x:Name="TogglePasswordButtonConfirm"
            Content="👁️"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Width="30" Height="30"
            Background="Transparent"
            BorderBrush="Transparent"
            Margin="0,0,10,0"
            FontSize="20"
            Tag="ConfirmPassword"
            Cursor="Hand"
            Click="TogglePasswordVisibility"/>
                </Grid>

                <!-- Botón -->
                <Button Content="Registrarse"
                        Height="45"
                        FontSize="16"
                        Margin="0,20,0,10"
                        Background="#2D2D30"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Cursor="Hand"
                        BorderThickness="0"
                        Padding="10"
                        Click="Register_Click"
                        IsDefault="True"/>

                <!-- Enlace -->
                <TextBlock Text="¿Ya tienes cuenta? Inicia sesión"
                           Foreground="#2D2D30"
                           TextAlignment="Center"
                           Cursor="Hand"
                           TextDecorations="Underline"
                           Margin="0,10"
                           MouseLeftButtonUp="LoginLink_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
