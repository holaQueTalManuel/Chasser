<Page x:Class="Chasser.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chasser"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Registro"
      Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#f8f1df" />

        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                     From="0" To="1" Duration="0:0:1"/>
        </Storyboard>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="4" Opacity="0.3"/>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SoftBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BackButton"
                Content="←"
                FontSize="24"
                Width="40" Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,20,0,0"
                Background="Transparent"
                BorderBrush="Transparent"
                Foreground="#2D2D30"
                Cursor="Hand"
                Click="BackButton_Click"/>

        <!-- Logo -->
        <Image Source="/Imgs/logo.jpg"
               Width="100" Height="100"
               HorizontalAlignment="Center"
               Margin="0,40,0,0"/>

        <!-- Formulario -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border CornerRadius="16"
                    Padding="30"
                    Background="White"
                    Width="350"
                    Opacity="1"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Crea tu cuenta"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#333"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Email -->
                    <Grid>
                        <TextBox x:Name="EmailBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="EmailBox_TextChanged"
                                 GotFocus="EmailBox_GotFocus"
                                 LostFocus="EmailBox_LostFocus"/>
                        <TextBlock x:Name="EmailPlaceholder"
                                   Text="Correo electrónico"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>
                    </Grid>

                    <!-- Usuario -->
                    <Grid>
                        <TextBox x:Name="UsernameBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="UsernameBox_TextChanged"
                                 GotFocus="UsernameBox_GotFocus"
                                 LostFocus="UsernameBox_LostFocus"/>
                        <TextBlock x:Name="UsernamePlaceholder"
                                   Text="Nombre de usuario"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>
                    </Grid>

                    <!-- Contraseña -->
                    <Grid>
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource PasswordBoxStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>
                        <TextBox x:Name="PasswordTextBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 Visibility="Collapsed"
                                 TextChanged="PasswordTextBox_TextChanged"/>
                        <TextBlock x:Name="PasswordPlaceholder"
                                   Text="Contraseña"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                        <Button x:Name="TogglePasswordButton"
                                Content="👁️"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Margin="0,0,10,0"
                                FontSize="20"
                                Tag="Password"
                                Cursor="Hand"
                                Click="TogglePasswordVisibility"/>
                    </Grid>

                    <!-- Confirmar contraseña -->
                    <Grid>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                     Style="{StaticResource PasswordBoxStyle}"
                                     PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                        <TextBox x:Name="ConfirmPasswordTextBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 Visibility="Collapsed"
                                 TextChanged="ConfirmPasswordTextBox_TextChanged"/>
                        <TextBlock x:Name="ConfirmPasswordPlaceholder"
                                   Text="Confirmar contraseña"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                        <Button x:Name="TogglePasswordButtonConfirm"
                                Content="👁️"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Margin="0,0,10,0"
                                FontSize="20"
                                Tag="ConfirmPassword"
                                Cursor="Hand"
                                Click="TogglePasswordVisibility"/>
                    </Grid>

                    <!-- Botón -->
                    <Button Content="Registrarse"
                            Style="{StaticResource MainButtonStyle}"
                            Click="Register_Click"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                        <TextBlock Text="¿Ya tienes cuenta? " Foreground="#555"/>
                        <TextBlock Text="Inicia sesión"
                                   Foreground="#2D2D30"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   TextDecorations="Underline"
                                   MouseLeftButtonUp="LoginLink_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>