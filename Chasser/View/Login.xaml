<Page x:Class="Chasser.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chasser"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="Login"
      Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#f8f1df" />

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="4" Opacity="0.3"/>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetName="LoginCard"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:0.7"/>
        </Storyboard>

        <Storyboard x:Key="LogoZoomStoryboard">
            <DoubleAnimation Storyboard.TargetName="LogoImage"
                             Storyboard.TargetProperty="RenderTransform.ScaleX"
                             From="0.8" To="1"
                             Duration="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="LogoImage"
                             Storyboard.TargetProperty="RenderTransform.ScaleY"
                             From="0.8" To="1"
                             Duration="0:0:0.5"/>
        </Storyboard>

        <Storyboard x:Key="SpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotation"
                             Storyboard.TargetProperty="Angle"
                             From="0" To="360"
                             Duration="0:0:1"/>
        </Storyboard>

        <Storyboard x:Key="WindowsStyleSpinnerAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                     Storyboard.TargetProperty="Angle"
                     From="360" To="0"
                     Duration="0:0:1"/>
        </Storyboard>
    </Page.Resources>

    <Grid Background="{StaticResource SoftBeige}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo -->
        <Image x:Name="LogoImage"
               Source="/Imgs/logo.jpg"
               Width="100" Height="100"
               HorizontalAlignment="Center"
               Margin="0,40,0,0"
               RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
            </Image.RenderTransform>
        </Image>

        <!-- Login Form -->
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="LoginCard"
                    CornerRadius="16"
                    Padding="30"
                    Background="White"
                    Width="350"
                    Opacity="0"
                    Effect="{StaticResource DropShadowEffect}">
                <StackPanel>
                    <TextBlock Text="Inicia sesión para jugar"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="#333"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Usuario -->
                    <Grid>
                        <TextBox x:Name="UsernameBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 TextChanged="UsernameBox_TextChanged"
                                 GotFocus="UsernameBox_GotFocus"
                                 LostFocus="UsernameBox_LostFocus"/>
                        <TextBlock x:Name="UsernamePlaceholder"
                                   Text="Nombre de usuario"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>
                    </Grid>

                    <!-- Contraseña -->
                    <Grid>
                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource PasswordBoxStyle}"
                                     PasswordChanged="PasswordBox_PasswordChanged"
                                     GotFocus="PasswordBox_GotFocus"
                                     LostFocus="PasswordBox_LostFocus"
                                     Visibility="Visible"/>

                        <TextBox x:Name="PasswordTextBox"
                                 Style="{StaticResource TextBoxStyle}"
                                 Visibility="Collapsed"
                                 TextChanged="PasswordTextBox_TextChanged"
                                 GotFocus="PasswordTextBox_GotFocus"
                                 LostFocus="PasswordTextBox_LostFocus"/>

                        <TextBlock x:Name="PasswordPlaceholder"
                                   Text="Contraseña"
                                   Foreground="Gray"
                                   Margin="14,0,0,0"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Visibility="Visible"/>

                        <Button x:Name="TogglePasswordButton"
                                Content="👁️"
                                IsTabStop="False"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Width="30" Height="30"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Margin="0,0,10,0"
                                FontSize="20"
                                Cursor="Hand"
                                Click="TogglePasswordVisibility"/>
                    </Grid>

                    <TextBlock Text="¿Olvidaste tu contraseña?"
                               Foreground="#2D2D30"
                               FontWeight="SemiBold"
                               TextAlignment="Center"
                               Margin="0,10,0,0"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               MouseLeftButtonUp="ForgotPassword_Click"/>

                    <Button Content="Iniciar Sesión"
                            Style="{StaticResource MainButtonStyle}"
                            Click="Login_Click"
                            IsDefault="True"/>

                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,15,0,0">
                        <TextBlock Text="¿No tienes cuenta? " Foreground="#555"/>
                        <TextBlock Text="Regístrate" 
                                   Foreground="#2D2D30"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   TextDecorations="Underline"
                                   MouseLeftButtonUp="RegisterLink_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Spinner overlay centrado -->
        <Grid x:Name="LoadingOverlay"
      Grid.RowSpan="2"
      Background="#80000000"
      Visibility="Collapsed"
      HorizontalAlignment="Stretch"
      VerticalAlignment="Stretch"
      Panel.ZIndex="10">
            <Grid>
                <Grid HorizontalAlignment="Center"
              VerticalAlignment="Center">
                    <Canvas Width="100" Height="100">
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="0" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="45" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="90" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="135" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="180" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="225" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="270" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                        <Ellipse Width="10" Height="10" Fill="White" Canvas.Left="45" Canvas.Top="0">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="315" CenterX="5" CenterY="50"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <!-- Group rotation -->
                        <Canvas.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" CenterX="50" CenterY="50"/>
                        </Canvas.RenderTransform>
                    </Canvas>

                    <TextBlock Text="Iniciando sesión..."
                       Foreground="White"
                       FontSize="16"
                       Margin="0,120,0,0"
                       HorizontalAlignment="Center"/>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Page>
