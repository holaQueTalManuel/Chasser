<Window x:Class="Chasser.EnterGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chasser"
        mc:Ignorable="d"
        Title="Introduce código de partida" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Icon="/Imgs/logo.ico"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="SoftBeige" Color="#FFF5F0E6" />

        <Style x:Key="StyledTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource SoftBeige}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Introduce el código de la partida"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#333"
                       TextAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="inputCod"
                     Style="{StaticResource StyledTextBox}"/>

            <Button Content="Entrar"
                    Style="{StaticResource StyledButton}"
                    Click="EnterGame_Click"/>
        </StackPanel>
    </Grid>
</Window>
