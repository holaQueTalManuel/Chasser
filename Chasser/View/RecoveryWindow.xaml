<Window x:Class="Chasser.View.RecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Recuperar contraseña" 
        Height="500" Width="400"
        Icon="/Imgs/logo.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Background="#f8f1df"
        >

    <Window.Resources>
        <Storyboard x:Key="FadeInStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:1"/>
        </Storyboard>

        <SolidColorBrush x:Key="PrimaryColor" Color="#2D2D30"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#4a6baf"/>
        <SolidColorBrush x:Key="SoftBeige" Color="#f8f1df"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>

        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="6"
                        Padding="{TemplateBinding Padding}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D3D40"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,10,5,0"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style x:Key="PasswordBoxWithEyeStyle" TargetType="PasswordBox" BasedOn="{StaticResource {x:Type PasswordBox}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                            <TextBox x:Name="VisiblePassword" 
                                 Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Tag}"
                                 Visibility="Collapsed"
                                 Background="Transparent"
                                 BorderThickness="0"/>
                            <Button x:Name="ToggleButton"
                                Content="👁️"
                                FontSize="14"
                                Width="30"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,5,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Foreground="{StaticResource PrimaryColor}"
                                Cursor="Hand"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <Grid Background="{StaticResource SoftBeige}">


        <!-- Contenido principal -->
        <Border CornerRadius="16"
                Background="White"
                Padding="20"
                Margin="20,20,20,20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="CHASSER"
                           FontSize="24"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBlock Text="RECUPERAR CONTRASEÑA"
                           FontSize="18"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Correo electrónico" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Email}"/>

                <TextBlock Text="Nueva contraseña" FontWeight="SemiBold"/>
                <PasswordBox x:Name="NewPasswordBox"/>

                <TextBlock Text="Confirmar contraseña" FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox"/>

                <Grid HorizontalAlignment="Center" Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <!-- Espacio entre botones -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Content="CANCELAR"
            Grid.Column="0"
            Style="{StaticResource MainButtonStyle}"
            Background="Gray"
            Command="{Binding CancelCommand}"/>

                    <Button Content="CAMBIAR"
            Grid.Column="2"
            Style="{StaticResource MainButtonStyle}"
            Command="{Binding ChangePasswordCommand}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>