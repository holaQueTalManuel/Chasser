<Window x:Class="Chasser.View.RecoveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chasser.View" xmlns:local1="clr-namespace:Chasser.ViewModel"
        mc:Ignorable="d"
        Title="RecoveryWindow" Height="450" Width="800">


    <Grid>
        <Border CornerRadius="16" Background="White" Padding="30" Margin="10" BorderBrush="#CCC" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Recuperar contraseña"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2D2D30"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Correo electrónico" FontSize="14" Margin="10,15,0,0"/>
                <TextBox Height="40" FontSize="16" Padding="10" Margin="0,5"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Text="Nueva contraseña" FontSize="14" Margin="10,15,0,0"/>
                <PasswordBox x:Name="NewPasswordBox"
                             Height="40" FontSize="16" Padding="10" Margin="0,5"
                             PasswordChanged="NewPasswordBox_PasswordChanged"/>

                <TextBlock Text="Confirmar contraseña" FontSize="14" Margin="10,15,0,0"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="40" FontSize="16" Padding="10" Margin="0,5"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <Button Content="Cambiar contraseña"
                        Height="45" FontSize="16" Margin="0,20,0,0"
                        Background="#2D2D30" Foreground="White"
                        BorderBrush="Transparent"
                        Command="{Binding ChangePasswordCommand}" />

                <Button Content="Cancelar"
                        Height="30" Margin="0,10,0,0"
                        Background="Transparent" Foreground="#777"
                        BorderBrush="Transparent"
                        Command="{Binding CancelCommand}" />
            </StackPanel>
        </Border>
    </Grid>

</Window>
